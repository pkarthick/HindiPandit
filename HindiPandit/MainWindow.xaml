                                    <TextBlock Foreground="Blue" Text="ा"/>
                                    <TextBlock Text="aa"/>
                                </StackPanel>
                            </Button>

                            <Button Click="Button_Click_SpecialCharacter" >
                                <StackPanel>
                                    <TextBlock Foreground="Blue" Text="ि"/>
